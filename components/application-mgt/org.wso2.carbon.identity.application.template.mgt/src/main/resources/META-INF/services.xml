<serviceGroup>

    <service name="IdentityApplicationTemplateManagementService" scope="transportsession">
        <transports>
            <transport>https</transport>
        </transports>
        <schema schemaNamespace="http://org.apache.axis2/xsd" elementFormDefaultQualified="true"/>
        <description>Service Provider Template related functionality</description>
        <parameter name="ServiceClass">
            org.wso2.carbon.identity.application.template.mgt.ApplicationTemplateManagementAdminService
        </parameter>
        <operation name="createServiceProviderAsTemplate">
            <parameter name="AuthorizationAction" locked="true">
                /permission/admin/manage/identity/apptemplatemgt/create
            </parameter>
        </operation>
        <operation name="importApplicationTemplate">
            <parameter name="AuthorizationAction" locked="true">
                /permission/admin/manage/identity/apptemplatemgt/create
            </parameter>
        </operation>
        <operation name="loadApplicationTemplate">
            <parameter name="AuthorizationAction" locked="true">
                /permission/admin/manage/identity/apptemplatemgt/view
            </parameter>
        </operation>
        <operation name="getAllApplicationTemplates">
            <parameter name="AuthorizationAction" locked="true">
                /permission/admin/manage/identity/apptemplatemgt/view
            </parameter>
        </operation>
        <operation name="getAllApplicationTemplateNames">
            <parameter name="AuthorizationAction" locked="true">
                /permission/admin/manage/identity/apptemplatemgt/view
            </parameter>
        </operation>
        <operation name="deleteApplicationTemplate">
            <parameter name="AuthorizationAction" locked="true">
                /permission/admin/manage/identity/apptemplatemgt/delete
            </parameter>
        </operation>
        <operation name="updateApplicationTemplate">
            <parameter name="AuthorizationAction" locked="true">
                /permission/admin/manage/identity/apptemplatemgt/update
            </parameter>
        </operation>
        <operation name="exportApplicationTemplate">
            <parameter name="AuthorizationAction" locked="true">
                /permission/admin/manage/identity/apptemplatemgt/view
            </parameter>
        </operation>
        <parameter name="AuthorizationAction" locked="false">/permission/admin/manage/identity/apptemplatemgt
        </parameter>
        <parameter name="adminService" locked="true">true</parameter>
    </service>

    <parameter name="hiddenService" locked="true">true</parameter>

</serviceGroup>
