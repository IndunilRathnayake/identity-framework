<serviceGroup>

    <service name="IdentityDefaultSeqManagementService" scope="transportsession">
        <transports>
            <transport>https</transport>
        </transports>
        <schema schemaNamespace="http://org.apache.axis2/xsd" elementFormDefaultQualified="true" />
        <description>Tenant defualt sequence management related functionality</description>
        <parameter name="ServiceClass">org.wso2.carbon.identity.application.defaultauth.seq.mgt.DefaultAuthenticationSeqMgtAdminService</parameter>
        <operation name="createDefaultAuthenticationSeq">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/identity/resourcemgt/create
            </parameter>
        </operation>
        <operation name="getDefaultAuthenticationSeq">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/identity/resourcemgt/view
            </parameter>
        </operation>
        <operation name="deleteDefaultAuthenticationSeq">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/identity/resourcemgt/update
            </parameter>
        </operation>
        <parameter name="AuthorizationAction" locked="false">/permission/admin/manage/identity/resourcemgt</parameter>
        <parameter name="adminService" locked="true">true</parameter>
    </service>

	<parameter name="hiddenService" locked="true">true</parameter>

</serviceGroup>
